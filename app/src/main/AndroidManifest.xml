<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.yls.newsclient">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.yls.newsclient.StartActivity"
            android:theme="@style/Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.example.yls.newsclient.GuideActivity"
                  android:theme="@style/Fullscreen"/>

        <activity android:name="com.example.yls.newsclient.MainActivity"
                  android:theme="@style/Fullscreen"/>
        
        <activity android:name="com.example.yls.newsclient.NewsDetailActivity"
                  android:theme="@style/NewDetailActivity"/>

        <activity android:name="com.example.yls.newsclient.VideoPlayActivity"
                  android:screenOrientation="landscape"/>

    </application>

</manifest>